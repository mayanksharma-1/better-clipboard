{
    "manifest_version": 3,
    "name": "Better Clipboard",
    "description": "Enhances the clipboard features on chrome",
    "version": "1.0",
    "icons": {
      "32": "icons/better.png"
    },
    "background": {
        "service_worker": "scripts/background.js"
      },
      "action": {
        "default_icon": {
            "32": "icons/better.png"
        },
        "default_title": "Copy!",
        "default_popup": "popup/popup.html"
      },
      "permissions": ["activeTab", "clipboardWrite"]
  }
